@model IEnumerable<Application.Models.Countries>

@{
    ViewData["Title"] = "Index";
}



<div class="text-center">
    <img src="https://20cartorio.com.br/wp-content/uploads/2020/12/cartorio-outrospaises-300x300.png" alt="logotipo" width=300 height=300>
</div>


<div class="text-center">
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Name: <input type="text" name="search" value="@ViewData["SearchFilter"]" />
                <input type="submit" value="Search" class="btn btn-dark" />
            </p>
        </div>
    </form>
</div>


<h6>Countries list</h6>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlagPhoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlagPhoto)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>